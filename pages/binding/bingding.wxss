/* pages/binding/bingding.wxss */
.container{
  margin-top: 10rpx;
  height:70vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;

}
.userinfo-avatar {
  width:200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: relative;
  bottom:500 rpx;
}

.userinfo-nickname {
  color: #aaa;
}
.bdinput{
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  width: 600rpx;
  height: 250rpx;
  border: 2px solid gray;
}
.bdinput text{
  font-size: 60rpx;
  letter-spacing: 10rpx;
  color:#a0a1fe ;
}
.bdinputtext{
  border: 1px solid gainsboro;
width: 400rpx;
height: 90rpx;
font-size:60rpx;
}
.input-placeholder{
font-size: 40rpx;
color: gainsboro;
}
.bindbtn{
  background-color: gainsboro;
  font-size: 45rpx;

}
