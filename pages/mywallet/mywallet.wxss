/* pages/mywallet/mywallet.wxss */
.mywal_header{
height: 90vh;
display: flex;
flex-direction: column;
justify-content: space-evenly;
align-items: center;
}
.mywal_header .header{
  font-size: 70rpx;
  letter-spacing:20rpx;
}
.mywal_header .header .iconfont{

  font-size:80rpx;
}
.mywal_balance_title{
  width: 650rpx;
  height: 100rpx;
  background-color: #cccccc;
  border-radius: 70rpx 70rpx 0 0;
}

.mywal_balance_title text{
  color: white;
  font-size: 40rpx;
}

.mywal_balance_title .iconfont{
  display: inline-block;
color: white;
font-size: 60rpx;
line-height: 100rpx;
margin-left: 40rpx;
margin-right: 20rpx;
}
.mywal_balance_con{
  margin-top: 20rpx;
  width: 650rpx;
  height: 200rpx;
  background-color: #cccccc;
  border-radius: 0 0 70rpx 70rpx;
  font-size: 60rpx;
  color: white;
display: flex;
align-items: center;
justify-content: space-evenly;
}